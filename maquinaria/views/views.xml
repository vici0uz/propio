<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>

    <record model="ir.actions.server" id="print_instance">
    <field name="name">Pagar</field>
    <field name="model_id" ref="model_maquinaria_trabajo_linea"/>
    <field name="binding_model_id" ref="model_maquinaria_trabajo_linea"/>

    <field name="state">code</field>
    <field name="code">
       if records:
            action = records.pagar()
    </field>
    </record>

        <record id="res_partner_maquinaria_inh" model="ir.ui.view">
            <field name="name">maquinaria.res.partner</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="base.view_partner_form"/>
            <field name="arch" type="xml">
                <div name="button_box" position="inside">
                    <button type="object" class="oe_stat_button" icon="fa-pencil-square-o" name="action_ver_trabajos_operario" context="{'default_partner_id': active_id}">
                        <div class="o_form_field o_stat_info">
                            <span class="o_stat_value">
                                <field name="trabajos_sin_pagar"/>
                            </span>
                            <span class="o_stat_text">Trabajos sin pagar</span>
                        </div>
                    </button>
                </div>
            </field>
        </record>

    <!-- MAQUINA -->
        <record id="maquinaria_maquina_tree" model="ir.ui.view">
            <field name="name">maquinaria.maquina.tree</field>
            <field name="model">maquinaria.maquina</field>
            <field name="arch" type="xml">
                <tree string="Maquinaria">
                    <field name="modelo"/>
                    <field name="no_serie"/>
                    <field name="ultimo_lugar"/>
                    <field name="ultimo_odometro"/>
                </tree>
            </field>
        </record>

        <record id="maquinaria_maquina_form" model="ir.ui.view">
            <field name="name">maquinaria.maquina.form</field>
            <field name="model">maquinaria.maquina</field>
            <field name="arch" type="xml">
                <form>
                    <header>
                        <!-- <button name="launch_wizard" type="object" string="Registrar inicio" class="oe_highlight" context="{'tipo':'open'}"/> -->
                        <!-- <button name="launch_wizard" type="object" string="Registrar final" class="oe_highlight" context="{'tipo':'closed'}" /> -->
                        <!-- <button name="devel" type="object" string="DEVEL"/> -->
                    </header>
                    <sheet>
                        <div class="oe_title">
                        <h1>
                            <label for="no_serie" />
                            <field name="no_serie" required="1" class="oe_inline"/>
                        </h1>
                        <h2>
                            <label for="modelo" class="oe_edit_only"/>
                            <field name="modelo" options="{'no_create': True}" required="1"/>

                        </h2>
                        </div>
                        <label for="responsable"/>
                        <field name="responsable"/>
                        <group colspan="4" attrs="{'invisible':[('trabajo_lineas_ids','=',[])]}">
                            <group>
                                <field name="ultimo_operador" readonly="1"/>
                                <field name="ultimo_lugar" readonly="1"/>
                            </group>
                            <group>
                                <field name="ultimo_odometro" readonly="1"/>
                                <field name="ultima_foto_odometro" widget="image" readonly="1"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Trabajos" attrs="{'invisible':[('trabajo_lineas_ids','=',[])]}">
                                <field name="trabajo_lineas_ids" readonly="1">
                                    <tree default_order="fecha_trabajo desc, id desc">
                                        <field name="trabajo_destino"/>
                                        <field name="operario"/>
                                        <field name="fecha_trabajo"/>
                                    </tree>
                                </field>

                            </page>
                        </notebook>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers" groups="base.group_user"/>
                        <field name="activity_ids" widget="mail_activity"/>
                    </div>
                </form>
            </field>
        </record>

        <record id="maquinaria_maquina_act" model="ir.actions.act_window">
            <field name="name">Maquinaria</field>
            <field name="res_model">maquinaria.maquina</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <!-- <field name="arch" type="xml">
            </field> -->
            <field name="help" type="html">
              <p class="o_view_nocontent_smiling_face">
                Registrar una nueva maquina
              <!-- </p><p> -->

              </p>
            </field>
        </record>

    <!-- MARCA -->
        <record id="maquinaria_marca_form" model="ir.ui.view">
            <field name="name">maquinaria.marca.form</field>
            <field name="model">maquinaria.maquina.marca</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <h1>
                            <label for="name" class="oe_edit_only"/>
                            <field name="name" class="oe_inline"/>
                        </h1>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="maquinaria_marca_tree" model="ir.ui.view">
            <field name="name">maquinaria.marca.tree</field>
            <field name="model">maquinaria.maquina.marca</field>
            <field name="arch" type="xml">
                <tree string="Marcas">
                    <field name="name"/>
                </tree>
            </field>
        </record>

        <record id="maquinaria_marca_act" model="ir.actions.act_window">
            <field name="name">Marcas</field>
            <field name="res_model">maquinaria.maquina.marca</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
              <p class="o_view_nocontent_smiling_face">
                Registrar una nueva Marca
              <!-- </p><p> -->

              </p>
            </field>
        </record>

    <!-- MODELO -->
        <record id="maquinaria_modelo_form" model="ir.ui.view">
            <field name="name">maquinaria.maquina.modelo.form</field>
            <field name="model">maquinaria.maquina.modelo</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <h1>
                        <field name="name" class="oe_readonly"/>
                        </h1>
                        <group colspan="4">
                        <field name="model_name" required="1" style="width:25%%"/>
                        <field name="marca_id" required="1" style="width:25%%"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="maquinaria_modelo_tree" model="ir.ui.view">
            <field name="name">maquinaria.maquina.modelo.tree</field>
            <field name="model">maquinaria.maquina.modelo</field>
            <field name="arch" type="xml">
                <tree string="Modelo">
                    <field name="marca_id" required="1"/>
                    <field name="model_name" required="1"/>
                </tree>
            </field>
        </record>

        <record id="maquinaria_modelo_act" model="ir.actions.act_window">
            <field name="name">Modelo</field>
            <field name="res_model">maquinaria.maquina.modelo</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
           <field name="help" type="html">
              <p class="o_view_nocontent_smiling_face">
                Registrar nuevos modelos
              <!-- </p><p> -->

              </p>
            </field>
        </record>

    <!-- DESTINO -->
        <record id="maquinaria_maquina_destino_form" model="ir.ui.view">
            <field name="name">maquinaria.destino.form</field>
            <field name="model">maquinaria.destino</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <h1>
                            <field name="name" style="width:25%%" required="1"/>
                        </h1>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="maquinaria_destino_tree" model="ir.ui.view">
            <field name="name">maquinaria.destino.tree</field>
            <field name="model">maquinaria.destino</field>
            <field name="arch" type="xml">
                <tree string="Lugar de trabajo" editable="top">
                    <field name="name" required="1"/>
                </tree>
            </field>
        </record>

        <record id="maquinaria_destino_act" model="ir.actions.act_window">
            <field name="name">Localidad</field>
            <field name="res_model">maquinaria.destino</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
              <p class="o_view_nocontent_smiling_face">
                Registrar un nuevo lugar de trabajo
              <!-- </p><p> -->

              </p>
            </field>
        </record>

    <!-- TRABAJO -->
        <record id="maquinaria_trabajo_search" model="ir.ui.view">
            <field name="name">maquinaria.trabajo.search</field>
            <field name="model">maquinaria.trabajo.linea</field>
            <field name="arch" type="xml">
                <search string="Filtrar turnos">
                    <field name="operario"/>
                    <filter name="no_pagado" string="No pagado" domain="(['pagado', '=', False])"/>
                    <group expand="0" string="Agrupar por">

                        <filter name="group_by_operario" string="Operario" context="{'group_by': 'operario'}"/>
                        <filter name="group_by_maquina" string="Maquina" context="{'group_by': 'maquina_id'}"/>
                    </group>
                </search>
            </field>
        </record>

        <record id="maquinaria_trabajo_tree" model="ir.ui.view">
            <field name="name">maquinaria.trabajo.tree</field>
            <field name="model">maquinaria.trabajo.linea</field>
            <field name="arch" type="xml">
                <tree string="Trabajos" default_order="hora_inicio desc" create="0"  delete="false" decoration-danger="tiene_observacion == True">
                    <field name="operario" domain="[('is_company','=',False)]"/>
                    <field name="maquina_id"/>
                    <field name="trabajo_destino" required="1"/>
                    <field name="fecha_trabajo" required="1"/>
                    <field name="hora_inicio" invisible="1"/>
                    <field name="tiene_observacion" invisible="1"/>
                </tree>
            </field>
        </record>

        <record id="maquinaria_trabajo_form" model="ir.ui.view">
            <field name="name">maquinaria.trabajo.form</field>
            <field name="model">maquinaria.trabajo.linea</field>
            <field name="arch" type="xml">
                <form duplicate="false" delete="false" create="false" edit="false">
                    <header>
                        <field name="status" widget="statusbar"/>
                        <button name="devel" type="object" string="Devel"/>
                    </header>
                    <sheet>
                        <div class="oe_title">
                            <h1>
                                <!-- <field name="operador"/> -->
                            </h1>
                            <h3>
                                <field name="maquina_id"/>
                            </h3>
                            <h3>
                                <field name="trabajo_destino"/>
                            </h3>
                        </div>
                        <group >
                            <group colspan="2">
                                <field name="km_diferencia" attrs="{'invisible':[('km_diferencia','&lt;=',0)]}"/>
                                <field name="horas_trabajadas_str"  class="oe_inline"/>
                                <field name="combustible" class="oe_inline" attrs="{'invisible':[('combustible','=',0)]}"/>
                            </group>

                            <group string="Inicio">
                                <field name="hora_inicio"/>
                                <field name="odometro_inicial"/>
                                <field name="odometro_inicial_imagen" widget="image"/>
                                <!-- <field name="odometro_inicial_imagen"/> -->
                            </group>

                            <group string="Final">
                                <field name="hora_final"/>
                                <field name="odometro_final"/>
                                <field name="odometro_final_imagen" widget="image"/>
                                <!-- <field name="odometro_final_imagen"/> -->
                            </group>
                        </group>
                        <notebook>
                            <page string="Trabajo" attrs="{'invisible':[('descripcion','=',False)]}">
                                <label for="descripcion"/>
                                <field name="descripcion"/>
                                <field name="tiene_observacion" invisible="1"/>
                                <field name="observacion" attrs="{'invisible':[('tiene_observacion','=',False)]}"/>
                            </page>
                        </notebook>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers" groups="base.group_user"/>
                        <field name="activity_ids" widget="mail_activity"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>

        <record id="maquinaria_trabajo_act" model="ir.actions.act_window">
            <field name="name">Turnos</field>
            <field name="res_model">maquinaria.trabajo.linea</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>

        </record>
        <!-- MENUS -->
        <menuitem id="maquinaria_menu_root" name="Maquinaria" web_icon="maquinaria,static/description/maquinaria.png" sequence="40"/>

        <menuitem id="maquinaria_menu_level1" parent="maquinaria_menu_root" name="Registros"/>
        <menuitem id="maquinaria_menu_level2" parent="maquinaria_menu_level1" action="maquinaria_maquina_act"/>
        <menuitem id="maquinaria_turno" parent="maquinaria_menu_level1" action="maquinaria_trabajo_act" sequence="10"/>

        <menuitem id="maquinaria_menu_maquina_marca" parent="maquinaria_menu_level1" action="maquinaria_marca_act" sequence="70"/>

        <menuitem id="maquinaria_menu_maquina_modelo" parent="maquinaria_menu_level1" action="maquinaria_modelo_act" sequence="80"/>

        <menuitem id="maquinaria_menu_destino" parent="maquinaria_menu_level1" action="maquinaria_destino_act" sequence="90"/>
    </data>
</odoo>
