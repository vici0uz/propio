<odoo>
    <data>

    <record id="foods_sale_inh_form" model="ir.ui.view">
        <field name="name">sale.order.food.inh</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//form" position="inside">
                <field name="type" invisible="1"/>
            </xpath>
        </field>
    </record>

    <record id="foods_sale_voucher_action" model="ir.actions.act_window">
        <field name="name">Vouchers</field>
        <field name="res_model">sale.order</field>
        <field name="view_mode">tree,form</field>
        <field name="view_type">form</field>
        <field name="context">{'default_type': 'voucher'}</field>
        <field name="domain">[('type','=','voucher')]</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a new voucher.
            </p>
        </field>
    </record>

    <menuitem id="foods_sale_voucher_menu" action="foods_sale_voucher_action" name="Vouchers" parent="sale.sale_order_menu"/>
    </data>
</odoo>
